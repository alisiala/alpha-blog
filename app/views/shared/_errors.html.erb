<% if obj.errors.any? %>
  <div class="row p-2">
    <div class="col-sm-8 offset-sm-2">
      <div class="card alert-danger">
        <div class="card-header">
          <h3 class="card-title">
            <%= pluralize(obj.errors.count, "error") %>
            prohibited this article from being saved:
          </h3>
          <div class="card-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
